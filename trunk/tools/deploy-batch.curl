{curl 7.0, 8.0 applet}
{applet manifest = "../tests/manifest.mcurl"}
{import * from COM.CURL.CDU.DEPLOY-SUPPORT}

{document-style PlainDocument}
{set-document-properties
    hstretch? = true,
    vstretch? = true, 
    font-size = 9pt
}

{value
    || specs
    let specs:DeploySpecs =  
        {evaluate {url "deploy-specs.scurl"}}
    let context:DeployContext =
        {DeployContext
            source-root = {url "../"},
            target-root = {url "../build/DEPLOYED/"}}
    || progress messages
    let display:VBox = 
        {VBox 
            font-size = 9pt}
    {specs.add-event-handler
        {on e:DeployProgress do
            {display.add 
                {if e.message == "--" 
                 then {hrule}
                 else e.message}}
            {if-non-null v = {display.get-view} then
                {v.update}}}}
    || execution
    {after 0s do
        {with-busy-cursor
            {specs.deploy context = context}}}
    display
}
